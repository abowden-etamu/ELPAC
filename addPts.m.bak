function c = addPts(C,I,edges,epsilon)
    [~,numC] = size(C);
    
    wSize = 3;
    k = 1;
    
    cExist(1:numC) = 1;
    cNew = struct('cNum',[],'x',[],'y',[]);
    iter = 0;
    for i = 1:1
        if(cExist)
            firstPt(1) = C(i).x(1);
            firstPt(2) = C(i).y(1);
            next = nextPt(C(i),I,wSize,edges,epsilon);
            cNew(k) = C(i);
            while(~((next(1) == firstPt(1)) && (next(2) == firstPt(2))) && iter < 55)
                [~,j] = size(cNew(k).x);
                cNew(k).x(j+1)=next(1);
                cNew(k).y(j+1)=next(2);

                next = nextPt(cNew(k),I,wSize,edges,epsilon);
                next(1)
                next(2)
                iter = iter + 1;
            end
            cNew(k).x(j+1) = firstPt(1);
            cNew(k).y(j+1) = firstPt(2);
            k = k+1;
        end
    end

    c = cNew;
end

